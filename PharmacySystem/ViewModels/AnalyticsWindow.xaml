<Window x:Class="PharmacySystem.ViewModels.FullAnalyticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Центр аналитики аптеки" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F4F7F9">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style x:Key="FilterPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" Opacity="0.1" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <TabControl x:Name="MainTabControl" Background="Transparent" BorderThickness="0">

            <TabItem Header="Критические остатки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="Медикаменты ниже критической нормы, требующие закупки." VerticalAlignment="Center" Margin="10" Foreground="#E74C3C" FontWeight="Bold"/>
                        <Button Content="Обновить список" Width="150" Height="30" Margin="10" Click="BtnRefreshCritical_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="DgCritical" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>

            <TabItem Header="Контроль сроков">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="Истекают до:" VerticalAlignment="Center" Margin="10,0"/>
                        <DatePicker x:Name="DpExpiryThreshold" Width="120" VerticalAlignment="Center"/>
                        <Button Content="Показать" Width="120" Height="30" Margin="10" Click="BtnShowExpiring_Click"/>
                        <Button Content="Ближайшие 30 дней" Width="150" Height="30" Margin="0" Click="BtnNextMonthExpiry_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="DgExpiring" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>

            <TabItem Header="Лист ожидания (Категории)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="Тип лекарства:" VerticalAlignment="Center" Margin="10,0"/>
                        <ComboBox x:Name="CmbWaitingCategory" Width="180" VerticalAlignment="Center" Margin="5,0"/>
                        <Button Content="Фильтровать" Width="120" Height="30" Margin="10" Click="BtnFilterWaiting_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="DgWaiting" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>

            <TabItem Header="Просрочено к выдаче">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="Заказы, которые не были забраны вовремя." VerticalAlignment="Center" Margin="10" Foreground="#E67E22" FontWeight="Bold"/>
                        <Button Content="Найти просрочку" Width="150" Height="30" Margin="10" Click="BtnOverdue_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="DgOverdue" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>

            <TabItem Header="Объемы продаж">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="Название:" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBox x:Name="TxtVolName" Width="150" VerticalAlignment="Center" Margin="5,0"/>

                        <TextBlock Text="С:" VerticalAlignment="Center" Margin="10,0"/>
                        <DatePicker x:Name="DpVolStart" Width="110" VerticalAlignment="Center"/>

                        <TextBlock Text="По:" VerticalAlignment="Center" Margin="5,0"/>
                        <DatePicker x:Name="DpVolEnd" Width="110" VerticalAlignment="Center"/>

                        <Button Content="Рассчитать" Width="120" Height="30" Margin="10" Click="BtnCalcVolume_Click" Background="#27AE60" Foreground="White"/>
                    </StackPanel>

                    <DataGrid x:Name="DgVolume" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Медикамент" Binding="{Binding Medication}" Width="*"/>
                            <DataGridTextColumn Header="Выдано единиц" Binding="{Binding Count}" Width="150" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Начало" Binding="{Binding Start}" Width="120"/>
                            <DataGridTextColumn Header="Конец" Binding="{Binding End}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Поиск пациентов">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="Лекарство:" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBox x:Name="TxtPatMedName" Width="150" VerticalAlignment="Center" Margin="5,0"/>

                        <TextBlock Text="Год:" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBox x:Name="TxtPatYear" Width="60" VerticalAlignment="Center" Margin="5,0"/>

                        <Button Content="Найти клиентов" Width="130" Height="30" Margin="10" Click="BtnFindPatients_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="DgPatients" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО Пациента" Binding="{Binding Name}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Топ клиентов">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="Размер топа:" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBox x:Name="TxtTopLimit" Width="50" VerticalAlignment="Center" Text="10"/>
                        <Button Content="Сформировать рейтинг" Width="180" Height="30" Margin="10" Click="BtnTopClients_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="DgTopClients" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя клиента" Binding="{Binding Key}" Width="*"/>
                            <DataGridTextColumn Header="Кол-во заказов" Binding="{Binding Value}" Width="150" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Профиль компонента (360°)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <TextBlock Text="МНН / Название:" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBox x:Name="TxtProfileName" Width="200" VerticalAlignment="Center" Margin="5,0"/>
                        <Button Content="Анализировать" Width="140" Height="30" Margin="10" Click="BtnCompProfile_Click"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15" Background="White" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="СВОДНАЯ ИНФОРМАЦИЯ" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,10"/>
                                <TextBlock x:Name="TxtProfName" FontSize="18" FontWeight="Bold" Text="-" Margin="0,0,0,10" TextWrapping="Wrap"/>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Текущий запас:" Grid.Column="0" Foreground="Gray"/>
                                    <TextBlock x:Name="TxtProfStock" Grid.Column="1" FontWeight="SemiBold"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Общая выручка:" Grid.Column="0" Foreground="Gray"/>
                                    <TextBlock x:Name="TxtProfRevenue" Grid.Column="1" FontWeight="SemiBold"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Использовано:" Grid.Column="0" Foreground="Gray"/>
                                    <TextBlock x:Name="TxtProfUsage" Grid.Column="1" FontWeight="SemiBold"/>
                                </Grid>

                                <Separator Margin="0,15"/>
                                <TextBlock Text="Применимые технологии:" FontWeight="Bold" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                                <ListBox x:Name="LstProfTechs" DisplayMemberPath="PreparationMethod" Height="150" BorderThickness="0" Background="#F4F7F9"/>
                            </StackPanel>
                        </Border>

                        <GroupBox Header="Текущий спрос (Лист ожидания)" Grid.Column="1">
                            <DataGrid x:Name="DgProfDemand" AutoGenerateColumns="True" IsReadOnly="True" BorderThickness="0"/>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Панель производства">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Style="{StaticResource FilterPanelStyle}">
                        <Button Content="Обновить статус производства" Width="220" Height="30" Margin="10" Click="BtnRefreshProduction_Click" Background="#3498DB" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Text="Заказы в процессе изготовления:" FontWeight="Bold" Margin="10,0,0,296"/>
                    <DataGrid x:Name="DgActiveProd" Grid.Row="1" Margin="10,25,10,10" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>